<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaTareasHogar.Views.EditarPage">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Entry x:Name="nombre" Placeholder="Nombre" />
            <Entry x:Name="descripcion" Placeholder="Descripción" />
            <TimePicker x:Name="horaInicio" Format="hh:mm" />
            <TimePicker x:Name="horaFin" Format="hh:mm" />
            <Switch x:Name="estado" IsToggled="false" />
            <Button Text="Guardar" Clicked="GuardarClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>